{
  "name": "monster-equation",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "start:firebase": "firebase serve --only hosting",
    "generate": "nuxt generate",
    "generate:lint": "yarn clean && yarn lint && yarn generate",
    "clean": "yarn clean:public && yarn clean:static",
    "clean:public": "rimraf \"public/**/*.*!(md)\" && rimraf \"public/_nuxt\"",
    "clean:static": "rimraf \"src/static/sw.js\"",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint --ext \".js,.vue\"",
    "lint:style": "stylelint \"**/*.{vue,css}\"",
    "deploy": "firebase deploy --only hosting",
    "generate:deploy": "yarn generate:lint && yarn deploy"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@amcharts/amcharts4": "^4.10.15",
    "@braid/vue-formulate": "^2.5.0",
    "@nuxtjs/firebase": "^7.4.1",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/toast": "^3.3.1",
    "cookie": "^0.4.1",
    "core-js": "^3.8.3",
    "firebase": "^8.2.6",
    "haikunator": "^2.1.2",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.20",
    "nuxt": "^2.14.12",
    "secure-ls": "^1.2.6",
    "vuex-persistedstate": "^4.0.0-beta.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/google-fonts": "^1.2.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/svg": "^0.1.12",
    "@nuxtjs/tailwindcss": "^3.4.2",
    "@tailwindcss/postcss7-compat": "^2.0.3",
    "autoprefixer": "^9",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.5.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "postcss": "^7",
    "prettier": "^2.2.1",
    "sass": "^1.32.7",
    "sass-loader": "^10.1.1",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  }
}
